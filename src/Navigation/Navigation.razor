@namespace Skclusive.Material.Layout
@inherits NavigationComponent

<List
    RootRef="@RootRef"
    Class="@_Class"
    Style="@_Style"
    @attributes="Attributes">
    @foreach(var item in Items)
    {
        <ListItem
            @key="@item.Title"
            Class="@_ItemClass"
            Style="@_ItemStyle"
            NoWrap
            DisableGutters
            Button>
            <NavLink
                ActiveClass="@_ActiveClass"
                class="@($"{context.Class} {_LinkClass}")"
                style="@($"{_LinkStyle}")"
                href="@item.Path"
                Match="@(item.Prefix ? NavLinkMatch.Prefix : NavLinkMatch.All)">
                <ListItemIcon>
                    <MaterialIcon
                        Class="@_IconClass"
                        Style="@_IconStyle">
                        @item.Icon
                    </MaterialIcon>
                </ListItemIcon>
                <ListItemText
                        Primary="@item.Title" />
            </NavLink>
        </ListItem>
    }
</List>

@namespace Skclusive.Material.Docs.App.View
@inherits ThemeComponentBase

<IconButton
    Color="@Color.Inherit"
    OnClick="@OnThemeChange"
    aria-label="Toggle light/dark theme"
    title="Toggle light/dark theme">
    @if (IsLight)
    {
        <Brightness4Icon />
    } else
    {
        <Brightness7Icon />
    }
</IconButton>

@code
{
    [Inject]
    public IThemeService ThemeService { set; get; }

    private void OnThemeChange()
    {
        var theme = IsLight ? Skclusive.Core.Component.Theme.Dark : Skclusive.Core.Component.Theme.Light;

        ThemeService.ChangeTheme(theme);
    }
}
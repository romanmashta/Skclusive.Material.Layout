@namespace Skclusive.Material.Layout
@inherits TopbarComponent

<AppBar
    RootRef="@RootRef"
    Class="@_Class"
    Style="@_Style"
    Color="@Color.Custom"
    @attributes="Attributes">
    <Toolbar>
        @if (HasSideBar && OnSidebarToggle != null)
        {
            <Hidden
                Context="HiddenContext">
                <IconButton
                    Class="@HiddenContext.Class"
                    Color="@Color.Inherit"
                    OnClick="@OnSidebarToggle">
                    <MenuIcon />
                </IconButton>
            </Hidden>
        }    
        @if (HasLogoContent)
        {
            <NavLink
                href="./"
                style="color: inherit;"
                Match="@NavLinkMatch.Prefix">
                @LogoContent
            </NavLink>
        }
        @ChildContent
        <div
            class="@_GrowClass"
            style="@_GrowStyle" />
        @ActionsContent
    </Toolbar>
</AppBar>
